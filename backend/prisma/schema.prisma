
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Job {
  id             String   @id @default(uuid())
  title          String
  organization   String
  location       String?
  state          String?
  examTrack      String   // SSC, Banking, etc.
  qualification  String?
  mode           String   // Online, Offline
  lastDate       DateTime?
  tags           String   // Comma separated tags or JSON
  description    String?
  vacancies      String?
  eligibility    String?
  applicationProcess String?
  fees           String?
  officialPdfUrl String?
  applyLink      String?

  importantDates String?    // JSON string for SQLite
  timeline       String?    // JSON string for SQLite

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  isArchived     Boolean  @default(false)
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  createdAt DateTime @default(now())
}
